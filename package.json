{
  "private": true,
  "sideEffects": false,
  "prisma": {
    "seed": "node --require esbuild-register prisma/seed.ts"
  },
  "scripts": {
    "build": "run-s build:*",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "build:remix": "remix build",
    "build:processor": "esbuild --tsconfig=processor.tsconfig.json --bundle --platform=node --format=cjs ./processor.ts --outdir=build",
    "deploy": "fly deploy --remote-only",
    "dev": "run-p dev:*",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "dev:build": "cross-env NODE_ENV=development npm run build:processor -- --watch",
    "dev:processor": "cross-env NODE_ENV=development node --inspect --require ./node_modules/dotenv/config ./build/processor.js",
    "dev:remix": "remix dev",
    "start": "run-p start:*",
    "start:server": "remix-serve build",
    "start:processor": "cross-env NODE_ENV=production node ./build/processor.js",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.11",
    "@heroicons/react": "^2.0.16",
    "@prisma/client": "^4.9.0",
    "@remix-run/node": "^1.12.0",
    "@remix-run/react": "^1.12.0",
    "@remix-run/serve": "^1.12.0",
    "axios": "^1.3.4",
    "bcryptjs": "^2.4.3",
    "cheerio": "^1.0.0-rc.12",
    "clsx": "^1.2.1",
    "cross-env": "^7.0.3",
    "framer-motion": "^10.0.1",
    "isbot": "^3.6.5",
    "isntall": "^0.0.1-security",
    "node-cron": "^3.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-auth-form": "^1.3.0",
    "spin-delay": "^1.2.0",
    "zod": "^3.20.6"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.12.0",
    "@remix-run/eslint-config": "^1.12.0",
    "@tailwindcss/forms": "^0.5.3",
    "@types/bcryptjs": "^2.4.2",
    "@types/node-cron": "^3.0.7",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "concurrently": "^7.6.0",
    "esbuild": "^0.17.10",
    "esbuild-register": "^3.4.2",
    "eslint": "^8.27.0",
    "install": "^0.13.0",
    "jest": "^29.6.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.4",
    "prettier-plugin-tailwindcss": "^0.2.3",
    "prisma": "^4.9.0",
    "remix-flat-routes": "^0.5.7",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": ">=14"
  }
}
